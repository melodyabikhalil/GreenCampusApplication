<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LightFragment">


    <Button
        android:id="@+id/buttonTurnOff"
        android:layout_width="wrap_content"
        android:layout_height="129dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_below="@+id/buttonTurnOn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="107dp"
        android:layout_marginLeft="107dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="106dp"
        android:background="#7c7b68"
        android:text="@string/turn_off"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/buttonTurnOn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonTurnOn"
        app:layout_constraintTop_toBottomOf="@+id/buttonTurnOn" />

    <Button
        android:id="@+id/buttonTurnOn"
        android:layout_width="wrap_content"
        android:layout_height="129dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_below="@+id/tvLightState"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="108dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="105dp"
        android:layout_marginRight="105dp"
        android:background="#f4e842"
        android:fadingEdge="horizontal|vertical"
        android:text="@string/turn_on"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/tvLightState"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvLightState"
        app:layout_constraintTop_toBottomOf="@+id/tvLightState" />

    <TextView
        android:id="@+id/tvLightState"
        android:layout_width="191dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="109dp"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="111dp"
        android:layout_marginRight="111dp"
        android:text="TextView"
        android:gravity="center"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>